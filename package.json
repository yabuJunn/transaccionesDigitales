{
  "name": "virtual-transactions",
  "version": "1.0.0",
  "description": "Virtual transactions project with public form, admin dashboard, and secure API",
  "private": true,
  "workspaces": [
    "client",
    "admin",
    "api"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=client",
    "dev:api": "npm run dev --workspace=api",
    "dev": "npm-run-all --parallel dev:client dev:api",
    "build": "npm run build --workspace=client && npm run build --workspace=api",
    "build:client": "npm run build --workspace=client",
    "build:api": "npm run build --workspace=api",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "seed": "npm run seed --workspace=api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
